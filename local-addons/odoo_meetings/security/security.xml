<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Access rights -->
  <record id="odoo_meetings_admin" model="res.groups">
    <field name="name">Odoo Meetings Admin</field>
    <!-- Add admin to this group -->
    <field name="users" eval="[(4, ref('base.user_admin'))]"/>
  </record>

  <!-- Record rules -->
  <!-- Admin can see the calendar events of everybody -->
  <record model="ir.rule" id="calendar_event_all_admin">
    <field name="name">See all calendar events</field>
    <field name="model_id" ref="calendar.model_calendar_event"/>
    <field name="groups" eval="[(4, ref('odoo_meetings_admin'))]"/>
    <field name="domain_force">[(1, '=', 1)]</field>
  </record>

  <!-- Employees (internal user) can only see the events where they are attendees -->
  <record model="ir.rule" id="calendar.calendar_event_rule_employee">
    <field name="name">All Calendar Event for employees</field>
    <field name="model_id" ref="calendar.model_calendar_event"/>
    <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    <field name="domain_force">[('user_id','=',user.id)]</field>
  </record>
</odoo>